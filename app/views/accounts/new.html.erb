<section class="hero">
	<div class="wrap">
		<div class="col-md-4">
			</div>
		<div class="panel panel-default col-md-4 col-md-offset-4">
  			<div class="panel-body">
<%= form_for @account, :class=>"form-horizontal",  :role => "form" do |f| %>
<div class="form-group">
<div class="input-group-lg">
	<%= f.text_field :subdomain, :class=> "form-control", :placeholder=>"Display name" %>
</div>  
</div>

<%= f.fields_for :owner do |builder| %>
<div class="form-group">
<div class=" input-group-lg">
	<%= builder.text_field :email, :class=> "form-control", :placeholder=>"Email" %>
</div>  
</div>
<div class="form-group">
<div class="input-group-lg">
	<%= builder.password_field :password, :class=> "form-control", :placeholder=>"Password" %>
</div>  
</div>
<div class="form-group">
<div class="input-group-lg">
	<%= builder.password_field :password_confirmation, :class=> "form-control", :placeholder=>"Password Confirmation" %>
</div>  
</div>

<%= builder.fields_for :profile do |p| %>
<div class="form-group">
<div class=" input-group-lg">
<%=p.label:country, "Country" %> <%= p.country_select :country, ["United States"] %>
</div>  
</div>

<% end %>


<% end %>

<div class="form-group">
<%= f.submit "Signup", :disable_with => 'Adding...', :class =>"btn btn-primary btn-lg btn-block" %>
<% end %>
</div>
</div>
</div>
</section>

