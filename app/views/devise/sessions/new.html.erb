						<div class="centered-text section centered-400 rounded offshadow">
	<h3 class="content-heading">sign in</h3>
	<hr class="gray">
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
 	<p>
 <%= f.email_field :email, :class=> "required", :placeholder=>"Email", :required => true %>
</p>
<p>
 <%= f.password_field :password, :class=> "required", :placeholder=>"Password", :required => true %>
</p>
  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>
<p>
<%= f.submit "Sign in", :class=>"btn btn-hero rounded"  %>
</p>
<% end %>
