<section class="hero">
	<div class="wrap">
	<h1 class="hero">Buy and Sell Mobile Phone & Tablets. Register now!</h1>
<p class="hero">We are low-cost, secure and easy to use.<br/> Already have an account?  <%= link_to "Sign in", new_vendor_session_path %>
</p>

	<div class="panel panel-default">
		<div class="panel-body"><%= form_for @account, :class=>"form-horizontal",  :role => "form" do |f| %>
			<h1 class="hero">Sign up</h1>
			<div class="form-body">
<div class="form-group">
<div class="input-group input-group-lg">
<%= f.text_field :subdomain, :class=> "form-control", :placeholder=>"Subdomain" %>
<span class="input-group-addon">.storeapp.com</span><br/>
</div>  
</div>

<%= f.fields_for :owner do |builder| %>
<div class="form-group">
<div class=" input-group-lg">
<%= builder.text_field :email, :class=> "form-control", :placeholder=>"Email" %>
<span class="helper-block">You email will be kept private</span>
</div>  
</div>
<div class="form-group">
<div class="input-group-lg">
<%= builder.password_field :password, :class=> "form-control", :placeholder=>"Password" %>
</div>  
</div>
<div class="form-group">
<div class="input-group-lg">
<%= builder.password_field :password_confirmation, :class=> "form-control", :placeholder=>"Password Confirmation" %>
</div>  
</div>
</div>

<% end %>

<div class="form-group">
<%= f.submit "Signup", :disable_with => 'Adding...', :class =>"btn btn-success btn-lg btn-block" %>
<% end %>
</div>
</div>
</div>
</section>
<section>
	<div class="wrapper">
		<ul class="phones">
		<% @phones.each do |l|%>
		<li>
			<% @list = Listing.find_all_by_phone_id(l.id, :order =>'askprice')%>
			<%= image_tag l.image.url(:thumb) %>
			<h3><%= link_to l.modelname, "/phones/#{l.id}" %></h3>
			<p><%=l.carrier %></p>
			<p><%= @list.first.askprice  unless @list.first.nil? %> - <%= @list.last.askprice  unless @list.last.nil? %>
				</li>
			<%end%>		</div>
		</section>