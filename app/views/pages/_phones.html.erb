<% if !params[:search] && !params[:msp]%>
<h2>Most <span class="double">Listed</span> Phones</h2>
	<ul class="phones row">
	<% @mostlistedphones.each do |l|%>
	<li class="col-sm-4 col-md-4 col-xs-12">
		<% @list = Listing.where('phone_id = ? AND status Like ?', l.id, "Approved") %>
		<%	@imgurl = "/phoneimages/" + l.modelname.gsub(" ", "-").downcase + "-" + l.carrier.downcase + ".png" %>

			<div class="main-page-img"><%= image_tag @imgurl %></div>
		<h3><%= link_to l.modelname, "/phones/#{l.id}" %> (<span class="carrier"><%=l.carrier %>)</h3>
		<p></span>
	<% if	@list.first.nil? %>
	<span class="price"><%= @list.count %> Listings.</span></p>
	<%else%>
		<span class="price">$<%= @list.first.askprice.to_i + 10  %> - $<%= @list.last.askprice.to_i + 10 %> [<%= @list.count %>]</span>  </p>
		<% end %>

		<a class="btn btn-success" href="/phones/<%= l.id %>">Buy</a> <a class="btn btn-danger" href="/phones/<%= l.id %>">Sell</a>



			</li>

		<%end%>	
		</ul>
		</div>
