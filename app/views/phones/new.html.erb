<% content_for :title,  "Add a new phone to the database" %>
	
<section class="silver-color">
	<div class="container softshadow">
		<div class="info-bar">
			<h1 class="listing-heading">Ad a new phone</h1>
		</div>
	</div>
<div class="container white-color softshadow">
		
		<%= form_for @phone, :class=>"form-horizontal auth-form",  :role => "form", :html => { :multipart => true } do |f| %>
		
		
				<h3>Phone data</h3><br/><br/>
				<hr class="gray">
				<%= f.label :image, "Upload your Phone's picture" %><%= f.file_field :image, :class => "btn btn-success" %><br/>
			  
			<%= f.text_field :modelname, :class=> "form-control", :placeholder=>"Phone's model name" %>

				<%= f.text_field :phonetype, :class=> "form-control", :placeholder=>"Type of phone" %>
			
			<hr class="gray">

		<%= f.submit "Add", :disable_with => 'Going...', :class =>"btn btn-default" %>
		<% end %>
		
</div>
</section>